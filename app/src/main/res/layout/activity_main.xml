<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name of the market"
        android:textSize="30dp"
        android:textColor="#FF0000"
        android:layout_margin="10dp"
        android:id="@+id/tv_name_of_market"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_local_phone_black_24dp"
            android:layout_margin="4dp"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textSize="25dp"
        android:id="@+id/tv_phone"
        android:layout_marginLeft="5dp"
        />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/google_map"
            android:id="@+id/image_location"
            android:layout_marginStart="100dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crowded"
        android:textSize="25dp"
        android:layout_marginStart="10dp"
        android:id="@+id/tv_crowded"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#9B9393"
        android:layout_margin="5dp"
        />
<!--    <LinearLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content">-->
<!--    <TextView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Items"-->
<!--        android:textSize="20dp"-->
<!--        android:layout_margin="10dp"-->
<!--        />-->
        <SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:queryHint="Items"
            android:layout_margin="10dp"
            android:id="@+id/search_view"
            android:background="@drawable/rounded_rectangle_2"
            />
<!--        <View-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="3dp"-->
<!--            android:background="#000"-->
<!--            android:layout_margin="5dp"-->
<!--            />-->
<!--    </LinearLayout>-->
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv_items"
        android:layout_margin="10dp"
        />

</LinearLayout>